{
  "cli": {
    "version": ">= 7.3.0",
    "requireCommit": true,
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleDebug"
      },
      "ios": {
        "buildConfiguration": "Debug"
      },
      "env": {
        "APP_ENV": "development",
        "API_KEY": "$(API_KEY_DEV)",
        "EXPO_PUBLIC_APP_ENV": "development",
        "EXPO_PUBLIC_API_URL": "EXPO_PUBLIC_API_URL_DEV",
        "EXPO_PUBLIC_API_KEY": "EXPO_PUBLIC_API_KEY_DEV"
      }
    },
    "preview": {
      "distribution": "internal",
      "autoIncrement": true,
      "android": {
        "buildType": "apk"
      },
      "ios": {
        "buildConfiguration": "Release",
        "distribution": "internal"
      },
      "env": {
        "APP_ENV": "preview",
        "API_KEY": "$(API_KEY_PREVIEW)",
        "EXPO_PUBLIC_APP_ENV": "$EXPO_PUBLIC_APP_ENV_PREVIEW",
        "EXPO_PUBLIC_API_URL": "EXPO_PUBLIC_API_URL_PREVIEW",
        "EXPO_PUBLIC_API_KEY": "$(EXPO_PUBLIC_API_KEY_PREVIEW)"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "buildType": "app-bundle",
        "gradleCommand": ":app:bundleRelease"
      },
      "ios": {
        "distribution": "store",
        "autoIncrement": true
      },
      "env": {
        "APP_ENV": "production",
        "API_KEY": "$(API_KEY_PROD)",
        "EXPO_PUBLIC_APP_ENV": "production",
        "EXPO_PUBLIC_API_URL": "EXPO_PUBLIC_API_URL_PROD",
        "EXPO_PUBLIC_API_KEY": "EXPO_PUBLIC_API_KEY_PROD"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "track": "production"
      },
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "your-app-store-connect-app-id",
        "appleTeamId": "your-apple-team-id"
      }
    }
  }
}
